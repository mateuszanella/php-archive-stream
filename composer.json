{
    "name": "mateuszanella/php-archive-stream",
    "description": "A modular and lightweight PHP library for creating ZIP and TAR archives on-the-fly with streaming support.",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "mateuszanella",
            "email": "mateusblk1@gmail.com"
        }
    ],
    "require": {
        "php": "^8.3"
    },
    "require-dev": {
        "phpunit/phpunit": "^12.0",
        "laravel/pint": "^1.24"
    },
    "autoload": {
        "psr-4": {
            "PhpArchiveStream\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "lint": [
            "pint"
        ]
    }
}
